{% extends "./base/base.njk" %}
{% block body %}
    <h1>Robots</h1>
    {% if err %}
        <h2>{{err}}</h2>
    {% endif %}
    <a href="/api/createRobot">Создать робота</a>
    {% for robot in robots %}
        <div class="robot">
        <a href="robots/{{ robot.name }}" class="robot-name">{{ robot.name }}</a>
        <p class="robot-body">{{ robot.body }}</p>
        <ul class="robot-weapons">
            {% for weapon in robot.weapons %}
                <li>{{weapon}}</li>
            {% endfor %}
        </ul>
    </div>
    {% endfor %}
{% endblock %}